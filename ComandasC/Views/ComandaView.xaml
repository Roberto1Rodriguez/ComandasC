<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComandasC.Views.ComandaView" Title="Comanda"
             xmlns:vm="clr-namespace:ComandasC.ViewModels">
  
    <StackLayout>
        <Picker SelectedItem="{Binding Comanda.Mesa}" Title="Mesa">
            <Picker.Items>
                <x:String>Mesa 1</x:String>
                <x:String>Mesa 2</x:String>
            </Picker.Items>
            
        </Picker>
       
        <CollectionView  ItemsSource="{Binding Pedidos}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label  TextColor="Black" Text="{Binding Nombre }"></Label>
                        <Label  TextColor="Black" Text="{Binding Cantidad }"></Label>
                        <Label Text="{Binding Precio}"></Label>
                        
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Command="{Binding EnviarCommand}"></Button>
        <Label Text="{Binding Comanda.total}"/>
    </StackLayout>
      
</ContentPage>